---
interface Props {
  title: string;
  className?: string;
}

const { title, className } = Astro.props;
---

<!doctype html>
<html lang="en" class:list={["bg-white", className]}>
  <head>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-XKE8361DZ1"
    ></script>
    <script>
      // @ts-nocheck
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        console.debug("gtag: ", arguments);
        dataLayer.push(arguments);
      }
      window.gtag = window.gtag || gtag;
      gtag("js", new Date());
      gtag("config", "G-XKE8361DZ1"); // , { debug_mode: true });
    </script>

    <!-- Meta Pixel Code -->
    <script>
      // @ts-nocheck
      !(function (f, b, e, v, n, t, s) {
        if (f.fbq) return;
        n = f.fbq = function () {
          n.callMethod
            ? n.callMethod.apply(n, arguments)
            : n.queue.push(arguments);
        };
        if (!f._fbq) f._fbq = n;
        n.push = n;
        n.loaded = !0;
        n.version = "2.0";
        n.queue = [];
        t = b.createElement(e);
        t.async = !0;
        t.src = v;
        s = b.getElementsByTagName(e)[0];
        s.parentNode.insertBefore(t, s);
      })(
        window,
        document,
        "script",
        "https://connect.facebook.net/en_US/fbevents.js"
      );
      fbq("init", "924917166016462");
      fbq("track", "PageView");
    </script>
    <noscript
      ><img
        height="1"
        width="1"
        style="display:none"
        src="https://www.facebook.com/tr?id=924917166016462&ev=PageView&noscript=1"
      /></noscript
    >
    <!-- End Meta Pixel Code -->

    <!-- basic meta -->
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Are you a student? Find out where your vote counts more in 2024: your home state, or your school state."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Twitter card -->
    <meta name="twitter:card" content="summary_large_image" />
    <!-- CONSIDER get a Twitter handle <meta name="twitter:site" content="@countMoreUS" /> -->
    <meta name="twitter:title" content="Count More" />
    <meta
      name="twitter:description"
      content="Are you a student? Find out where your vote counts more in 2024: your home state, or your school state."
    />
    <meta
      name="twitter:image"
      content="https://countmore.us/img/count_more-800x418.png"
    />

    <!-- Facebook (open graph) -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Count More" />
    <meta
      property="og:description"
      content="Are you a student? Find out where your vote counts more in 2024: your home state, or your school state."
    />
    <meta
      property="og:image"
      content="https://countmore.us/img/count_more-1200x630.png"
    />
    <meta property="og:url" content="https://countmore.us/" />

    <!-- slot for further head content -->
    <slot name="head" />
  </head>
  <body>
    <slot />
  </body>
</html>
